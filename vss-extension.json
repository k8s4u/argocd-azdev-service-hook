{
    "manifestVersion": 1,
    "id": "argocd-service-hook",
    "version": "0.0.18",
    "name": "Argo CD Webhook",
    "description": "Trigger Argo CD sync with webhook",
    "publisher": "OlliJanatuinen",
    "public": false,
    "icons": {
        "default": "images/argocd-logo.png"
    },
    "scopes": [],
    "files": [
        {
            "path": "images",
            "addressable": true
        }
    ],
    "content": {
        "details": {
            "path": "README.md"
        }
    },
    "categories": [
        "Azure Repos"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "contributions": [
        {
            "id": "argocd",
            "type": "ms.vss-servicehooks.consumer",
            "targets": [
                "ms.vss-servicehooks.consumers"
            ],
            "properties": {
                "id": "argocd",
                "name": "Argo CD",
                "description": "Argo CD is a declarative, GitOps continuous delivery tool for Kubernetes.",
                "informationUrl": "https://github.com/k8s4u/argocd-azdev-service-hook",
                "inputDescriptors": [
                    {
                        "id": "url",
                        "isRequired": true,
                        "name": "Argo CD Base URL",
                        "description": "Argo CD URL without /api/webook",
                        "inputMode": "textbox"
                    }
                ],
                "actions": [
                    {
                        "id": "ms.vss-servicehooks.consumers.argocd",
                        "consumerId": "argocd",
                        "name": "Trigger sync",
                        "description": "Trigger Argo CD sync action",
                        "supportedEventTypes": [
                            "git.push"
                        ],
                        "publishEvent": {
                            "url": "{{{url}}}/api/webhook",
                            "httpHeaders": "X-Azure-DevOps-Event:true",
                            "resourceDetailsToSend": "all",
                            "transforms": [
                                {
                                    "eventType": "git.push",
                                    "templateAssetType": "transform.hbs"
                                }
                            ]
                        }
                    }
                ]
            }
        }
    ]
}